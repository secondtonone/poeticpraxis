{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["DOM", "ES2020", "ES6", "ES7", "ESNext", "WebWorker"],
        "baseUrl": "./",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "plugins": [
            {
                "name": "typescript-styled-plugin",
                "tags": [
                    "styled",
                    "css",
                    "sty"
                ]
            }
        ],
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@containers/*": [
                "src/containers/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@styles": [
                "src/styles"
            ],
            "@store/*": [
                "src/store/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@typings/*": [
                "src/typings/*"
            ],
            "@contexts/*": [
                "src/contexts/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@routes": [
                "src/routes"
            ],
            "@public/*": [
                "public/*"
            ],
            "@icons/*": [
                "src/components/IconSVG/*"
            ],
            "@translations/*": [
                "src/translations/*"
            ],
            "@translations": [
                "src/translations"
            ]
        }
    },
    "include": [
        "src/**/*",
        "public/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".vscode"
    ]
}
