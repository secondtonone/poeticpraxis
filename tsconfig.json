{
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "module": "esnext",
    "target": "ES2017",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "importHelpers": true,
    "noUnusedParameters": true,
    "incremental": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": [
      "DOM",
      "ES2020",
      "ES6",
      "ES2015.Generator",
      "ES7",
      "ESNext",
      "WebWorker",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "baseUrl": "./",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": [
      "preact",
      "node"
    ],
    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin",
        "tags": [
          "styled",
          "css",
          "sty"
        ]
      }
    ],
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@containers/*": [
        "src/containers/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@styles": [
        "src/styles"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@typings/*": [
        "src/typings/*"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@routes": [
        "src/routes"
      ],
      "@public/*": [
        "public/*"
      ],
      "@icons/*": [
        "src/components/IconSVG/*"
      ],
      "@translations/*": [
        "src/translations/*"
      ],
      "@translations": [
        "src/translations"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vscode",
    "public"
  ]
}
