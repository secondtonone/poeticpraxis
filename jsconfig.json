{
    "compilerOptions": {
        "target": "es6",
        "module": "commonJS",
        "baseUrl": "./",
        "jsx": "react",
        "paths": {
            "@components/*": ["src/components/*"],
            "@containers/*": ["src/containers/*"],
            "@utils/*": ["src/utils/*"],
            "@styles/*": ["src/styles/*"],
            "@modules/*": ["src/modules/*"],
            "@hooks/*": ["src/hooks/*"],
            "@routes/*": ["src/routes/*"],
            "@store/*": ["src/store/*"],
            "@public/*": ["public/*"],
            "@icons/*": ["src/components/IconSVG/*"]
        }
    },
    "include": ["src/**/*", "public/**/*"],
    "exclude": ["node_modules", "dist", ".vscode"]
}
